<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="#5F9EA0"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FAEBD7"
        android:text="Podaj wartosc klucza" />

    <EditText
        android:id="@+id/editTextNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:id="@+id/textView2"
        android:textColor="#FAEBD7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Podaj tekst" />

    <EditText
        android:id="@+id/editTextText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text" />

    <Button
        android:id="@+id/button"
        android:onClick="cezar"
        android:backgroundTint="#ADD8E6"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Zaszyfruj" />

    <TextView
        android:id="@+id/textView3"
        android:textColor="#FAEBD7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tekst zaszyfrowany" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#F0F8FF"
        android:text="" />

    <Button
        android:id="@+id/button2"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#ADD8E6"
        android:text="Zaszyfruj w pliku" />
</LinearLayout>